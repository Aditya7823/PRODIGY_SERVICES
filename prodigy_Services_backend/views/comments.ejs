<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include head partial for meta tags, styles, etc. -->
    <%- include('./partials/head') %>
    <style>
        .blog-detail {
            margin-top: 20px;
        }

        .blog-detail img {
            max-width: 100%;
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .blog-card {
            position: relative;
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .blog-title {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .container {
            display: flex;
        }

        .sidemenu {
            width: 250px;
            margin-right: 20px;
        }

        .content-area {
            flex-grow: 1;
        }

        body {
            background-color: rgb(8, 8, 8);
        }

        div.blog-card {
            background-image: url('/images/contact.png');
            background-repeat: no-repeat;
            background-size: cover;
            color: white;
        }
        @media(max-width:400px)
        {
            .blog-card{

                margin-left: 0px;
            }
        }
    </style>
</head>
<body>
    <!-- Include navigation partial -->
    <%- include('./partials/nav') %>

    <div class="container">
        <!-- Include sidemenu partial -->
        <div class="sidemenu">
            <%- include('./partials/sidemenu') %>
        </div>

        <div class="content-area">
            <h1 style="color: white; margin-left: 70px;"  >My Blogs</h1>

            <% if (blogs && blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="blog-card"  style="margin-left: 67px;" >
                        <!-- Blog Details -->
                        <h2 class="blog-title"><%= blog.title %></h2>

                        <p><strong>By: </strong><%= blog.createdBy.fullname || "Anonymous" %></p>
                        <p><strong>Published on: </strong><%= new Date(blog.createdAt).toDateString() %></p>
                        <img src="<%= blog.coverImageURL %>" alt="<%= blog.title %>" class="img-fluid">
                        <div class="blog-content mt-3">
                            <p><%= blog.body %></p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No blogs found for this user.</p>
            <% } %>
        </div>
    </div>

    <!-- Include scripts partial -->
    <%- include('./partials/scripts') %>
</body>
</html>
